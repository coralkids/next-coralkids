{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
          {
              "transform": "typescript-plugin-styled-components",
              "type": "config",

              // other typescript-plugin-styled-components options can be added here
              "minify": true,
              "ssr": true
          }
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "**/*.d.ts",
    "expo-env.d.ts"
  ]
}
